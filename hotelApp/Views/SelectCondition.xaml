      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotelApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SelectCondition">

    <Grid Background="White">

        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>

        </Grid.ColumnDefinitions>


        <Grid Grid.Column="0" >
            <Button FontSize="30"  Background="Green" > Register 
                
            </Button>
            
        </Grid>

        <Grid Grid.Column="1">
            <Button Content="Room"  Command="{Binding GetRoomCommand}" FontSize="30" Background="Yellow">

            </Button>
            
        </Grid>
        
        
    </Grid>
</Page>
