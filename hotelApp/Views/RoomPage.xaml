<Page x:Class="hotelApp.Views.RoomPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:hotelApp.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomPage">

    <Grid Background="Gray">

        <StackPanel Margin="0 60 0 0" >
            <Label HorizontalAlignment="Center" FontSize="20" Foreground="White">Room Number</Label>
            <TextBox Height="30" FontSize="20" Width="300" HorizontalAlignment="Center"></TextBox>

            <Label HorizontalAlignment="Center" FontSize="20" Foreground="White">Person Count</Label>
            <TextBox Height="30" FontSize="20" Width="300" HorizontalAlignment="Center"></TextBox>

            <Label HorizontalAlignment="Center" FontSize="20" Foreground="White">Room Condition</Label>
            <ComboBox Height="30" FontSize="20" Width="300" HorizontalAlignment="Center"></ComboBox>

            <Button Height="30" Width="230" Margin="0 20 0 0" Background="Green" Foreground="White" FontWeight="DemiBold" FontSize="20">Add Room</Button>

        </StackPanel>
    </Grid>
</Page>
